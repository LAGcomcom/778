<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信\n同步核心"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/primary_brand"
        android:lineSpacingExtra="-8dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全上传通道"
        android:textColor="@color/secondary_brand"
        android:letterSpacing="0.2"
        android:textSize="12sp"
        android:layout_below="@id/tv_header"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="32dp"/>

    <!-- Settings Card -->
    <LinearLayout
        android:id="@+id/card_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header"
        android:orientation="vertical"
        android:background="@color/surface_dark"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统配置"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_dark"
            android:hint="请输入本机号码"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/text_primary"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:inputType="phone"
            android:fontFamily="monospace"/>

        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存配置"
            android:textColor="@color/black"
            android:backgroundTint="@color/secondary_brand"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Log Section -->
    <TextView
        android:id="@+id/tv_log_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统日志"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        android:letterSpacing="0.1"
        android:layout_below="@id/card_settings"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_clear_log"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="清空"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/text_secondary"
        android:layout_alignTop="@id/tv_log_label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"/>

    <ScrollView
        android:id="@+id/sv_log"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tv_log_label"
        android:background="@color/surface_dark"
        android:padding="8dp">
        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统初始化中..."
            android:textColor="@color/accent_yellow"
            android:fontFamily="monospace"
            android:textSize="10sp"/>
    </ScrollView>

    <!-- Hidden / Less used views but kept for compatibility -->
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_log"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_primary"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_des"
        android:layout_above="@id/bottom_actions"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:visibility="gone"/>
    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sms_view"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="查看数据"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_brand"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_sms_backup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="开始备份"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>